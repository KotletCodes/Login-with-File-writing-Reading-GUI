<Window x:Class="Loginattempt.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Loginattempt"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"
        WindowStyle="None"
        Background="LightGreen"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Width="80" Height="40" BorderThickness="2" BorderBrush="Black" Background="CornflowerBlue" Content="Login" FontWeight="Heavy" FontStyle="Italic" Foreground="ForestGreen" Grid.Column="2" Click="Button_Click" Grid.Row="3"></Button>
        <Label Content="Username" Grid.Row="1" FontSize="20" HorizontalAlignment="Center"></Label>
        <Label Content="Password:" Grid.Row="1" Grid.Column ="1" FontSize="20" HorizontalAlignment="Center"></Label>
        <TextBox Grid.Row="1" Grid.Column="2" BorderThickness="2" BorderBrush="Black" Height="50" Width="300" TextAlignment="Center" Text="{Binding boundPass}"  Background="FloralWhite" Foreground="Black" FontWeight="Light" FontStyle="Italic" FontSize="20"></TextBox>
        <TextBox Grid.Row="1" BorderThickness="2"  BorderBrush="Black" Height="50" Width="300" TextAlignment="Center" Text="{Binding boundUser}"  Background="FloralWhite" Foreground="Black" FontWeight="Light" FontStyle="Italic" FontSize="20"></TextBox>
    </Grid>
</Window>
